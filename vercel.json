{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "default": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string from Neon",
      "required": true
    },
    "SESSION_SECRET": {
      "description": "Secret key for session encryption (generate with: node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\")",
      "required": true
    }
  },
  "functions": {
    "api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/dist/public/.*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
